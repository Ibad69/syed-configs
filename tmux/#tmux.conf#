set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'christoomey/vim-tmux-navigator'
#set -g @plugin 'catppuccin/tmux'
# bind -n M-L next-window 
# bind -n M-L previous-window 

set -g @plugin 'dreamsofcode-io/catppuccin-tmux'
set -g mouse on

#start windows and panes at 1 not 0
set -g base-index 1
set -g pane-base-index 1
set-window-option -g pane-base-index 1
set-option -g renumber-windows on 

unbind C-b
set-option -g prefix `
bind ` send-prefix

#bind-key -r R run-shell "~/.local/bin/tmux-sessionizer ~/syed-dev/project-backend"

bind -r ^ last-window

bind-key -r f run-shell "tmux neww ~/.local/bin/tmux-sessionizer":

#bind-key -r V run-shell "~/.local/bin/tmux-sessionizer ~/"

#bind-key -r G run-shell "~/.local/bin/tmux-sessionizer ~/syed-dev/project"

bind-key x confirm-before "kill-session"

run '~/.tmux/plugins/tpm/tpm'
